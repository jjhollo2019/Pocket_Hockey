<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlepage"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="137dp"
        android:fontFamily="@font/chop"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorAccentLight"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newGameTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="176dp"
        android:fontFamily="@font/chop"
        android:text="@string/newGame"
        android:textColor="@color/colorAccentLight"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/howToPlayTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chop"
        android:text="@string/HowToTitle"
        android:textColor="@color/colorAccentLight"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="423dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/leaderTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chop"
        android:text="@string/leader"
        android:textColor="@color/colorAccentLight"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="353dp" />
</androidx.constraintlayout.widget.ConstraintLayout>